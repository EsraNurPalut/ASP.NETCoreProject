@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Kategori Adı</td>
        <td>Pasif Yap</td>
        <td>Aktif Yap</td>
        <td>Düzenle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-outline-danger">Pasif Yap</a> </td>
            <td><a href="#" class="btn btn-outline-success">Aktif Yap</a> </td>
            <td><a href="#" class="btn btn-outline-primary">Düzenle</a> </td>


        </tr>
    }
</table>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<br />
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>

